<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MedicineDatails">
    <TextView
        android:id="@+id/mediName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Medicine Name:"
        android:textSize="15sp"
        android:gravity="center|left"
        android:textColor="@color/purple_700"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/pharmacology"
        app:layout_constraintTop_toBottomOf="@id/mediName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pharmacology:"
        android:textSize="15sp"
        android:gravity="left"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/sideEffect"
        app:layout_constraintTop_toBottomOf="@id/pharmacology"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medicine Name:"
        android:textSize="15sp"
        android:gravity="left"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/precautions"
        app:layout_constraintTop_toBottomOf="@id/sideEffect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Precautions:"
        android:textSize="15sp"
        android:gravity="left"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/storage"
        app:layout_constraintTop_toBottomOf="@id/precautions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stroge:"
        android:textSize="15sp"
        android:gravity="left"
        android:textColor="@color/black"

        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>